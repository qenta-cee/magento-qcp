        <resources>
            <wirecard_checkoutpage_setup>
                <setup>
                    <module>Wirecard_CheckoutPage</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </wirecard_checkoutpage_setup>
            <wirecard_checkoutpage_write>
                <connection>
                    <use>core_write</use>
